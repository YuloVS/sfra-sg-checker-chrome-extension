{
  "name": "SFRA-SG Detector",
  "description": "This extensions detects if the site is using Salesforce SFRA or Site-Genesis technology",
  "version": "0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "webRequest", "downloads"],
  "host_permissions": ["https://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icons/Salesforce-16x16.png",
      "32": "/icons/Salesforce-32x32.png",
      "48": "/icons/Salesforce-48x48.png",
      "128": "/icons/Salesforce-128x128.png"
    }
  },
  "icons": {
    "16": "/icons/Salesforce-16x16.png",
    "32": "/icons/Salesforce-32x32.png",
    "48": "/icons/Salesforce-48x48.png",
    "128": "/icons/Salesforce-128x128.png"
  }
}
